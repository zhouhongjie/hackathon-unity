<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/everyplay_sidemenu"
        android:id="@+id/everyplaySocialLayoutSideMenu"
        android:layout_width="260dp"
        android:layout_height="match_parent"/>
    
    <include
        android:id="@+id/everyplaySocialLayoutTopBar"
        layout="@layout/everyplay_social_topbar"
        android:layout_height="45dp"
        android:layout_width="match_parent" />

    <com.everyplay.Everyplay.view.EveryplayWebView
        android:id="@+id/everyplaySocialLayoutWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/everyplaySocialLayoutTopBar"
        android:background="@color/everyplay_blue" />
    
    <View android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/everyplaySocialLayoutTopBar"
        android:id="@+id/everyplaySocialLayoutWebViewCover" />
    
    <include layout="@layout/everyplay_splashscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/everyplaySocialLayoutSplashScreen"/>

</RelativeLayout>